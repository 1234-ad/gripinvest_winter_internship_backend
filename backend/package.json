{
  "name": "gripinvest-backend",
  "version": "1.0.0",
  "description": "Backend API for Grip Invest Mini Investment Platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "migrate": "node src/utils/migrate.js",
    "seed": "node src/utils/seed.js",
    "db:reset": "npm run migrate && npm run seed"
  },
  "keywords": ["investment", "fintech", "api", "nodejs", "express"],
  "author": "Grip Invest Intern",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "sequelize": "^6.32.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "nodemailer": "^6.9.4",
    "crypto": "^1.0.1",
    "axios": "^1.5.0",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.4",
    "eslint": "^8.47.0",
    "prettier": "^3.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/config/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    }
  }
}